# Django Core Settings
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=

# Production security (recommended when DJANGO_DEBUG=0)
DJANGO_SECURE_SSL_REDIRECT=1
DJANGO_SESSION_COOKIE_SECURE=1
DJANGO_CSRF_COOKIE_SECURE=1
# HSTS (set 0 only if the domain is not always served via HTTPS)
DJANGO_SECURE_HSTS_SECONDS=3600
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=0
DJANGO_SECURE_HSTS_PRELOAD=0

# Localization
DJANGO_LANGUAGE_CODE=ru-ru
DJANGO_TIME_ZONE=Europe/Moscow

# Database
# Options: sqlite | postgres
DB_ENGINE=sqlite

# PostgreSQL settings (when DB_ENGINE=postgres)
POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# File Upload Limits (in bytes, default: 20MB)
DJANGO_DATA_UPLOAD_MAX_MEMORY_SIZE=20971520
DJANGO_FILE_UPLOAD_MAX_MEMORY_SIZE=20971520

# Mailer (email)
# Generate once: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MAILER_FERNET_KEY=
# Optional: public URL for links in emails (unsubscribe). Example: https://crm.example.ru
PUBLIC_BASE_URL=

# Security Contact Email (for security.txt)
SECURITY_CONTACT_EMAIL=

# CORS (if using separate frontend)
# Example: https://crm.example.ru,https://app.example.ru
CORS_ALLOWED_ORIGINS=

# Redis (Cache & Celery)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Content Security Policy (CSP) - optional, defaults are set in settings.py
# CSP_DEFAULT_SRC='self'
# CSP_SCRIPT_SRC='self' 'unsafe-inline' https://cdn.tailwindcss.com
# CSP_STYLE_SRC='self' 'unsafe-inline' https://cdn.tailwindcss.com
# CSP_IMG_SRC='self' data: https: blob:
# CSP_FONT_SRC='self' data:
# CSP_CONNECT_SRC='self'