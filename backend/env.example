DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
# Production security (recommended when DJANGO_DEBUG=0)
DJANGO_SECURE_SSL_REDIRECT=1
DJANGO_SESSION_COOKIE_SECURE=1
DJANGO_CSRF_COOKIE_SECURE=1
# HSTS (set 0 only if the domain is not always served via HTTPS)
DJANGO_SECURE_HSTS_SECONDS=3600
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=0
DJANGO_SECURE_HSTS_PRELOAD=0

# sqlite | postgres
DB_ENGINE=sqlite

POSTGRES_DB=crm
POSTGRES_USER=crm
POSTGRES_PASSWORD=crm
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Mailer (email)
# Generate once: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MAILER_FERNET_KEY=
# Optional: public URL for links in emails (unsubscribe). Example: https://crm.example.ru
PUBLIC_BASE_URL=


