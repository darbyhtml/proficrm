<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Android 14+ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <!-- Автозапуск после перезагрузки -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Android 13+ notifications permission (requested at runtime) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Для чтения CallLog (нужно запросить разрешение в runtime) -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Разрешение на запрос отключения оптимизации батареи (кнопка «Разрешить работу в фоне») -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:name=".CRMApplication"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:icon="@drawable/ic_crm"
        android:theme="@style/Theme.CRMProfiDialer"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.CRMProfiDialer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.CRMProfiDialer" />

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.CRMProfiDialer" />

        <activity
            android:name=".QRLoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.CRMProfiDialer" />

        <activity
            android:name=".LogsActivity"
            android:exported="false"
            android:theme="@style/Theme.CRMProfiDialer" />

        <activity
            android:name=".ui.support.SupportHealthActivity"
            android:exported="false"
            android:theme="@style/Theme.CRMProfiDialer" />

        <activity
            android:name=".ui.CallsHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.CRMProfiDialer" />

        <activity
            android:name=".PortraitCaptureActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.CRMProfiDialer" />

        <service
            android:name=".CallListenerService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Firebase Messaging Service (используется только при настроенном Firebase) -->
        <service
            android:name=".push.FcmMessagingServiceImpl"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".recovery.BootCompletedReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>

