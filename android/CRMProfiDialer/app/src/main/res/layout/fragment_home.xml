<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_base">

        <!-- Статус: одна карточка, разделение через spacing -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            style="@style/Widget.CRM.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_base">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xl"
                android:gravity="center">

                <TextView
                    android:id="@+id/statusIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:contentDescription="@string/status_ready" />

                <TextView
                    android:id="@+id/statusText"
                    style="@style/TextAppearance.CRM.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <TextView
                    android:id="@+id/lastCommandText"
                    style="@style/TextAppearance.CRM.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/statusExplanation"
                    style="@style/TextAppearance.CRM.BodySecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_base" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fixButton"
                    style="@style/Widget.CRM.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_fix"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/error"
                    android:visibility="gone"
                    android:minHeight="@dimen/touch_target_min" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Статистика «Сегодня» -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/todayStatsCard"
            style="@style/Widget.CRM.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_base">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_base">

                <TextView
                    style="@style/TextAppearance.CRM.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_today_title"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/todayStatsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/todayTotal"
                            style="@style/TextAppearance.CRM.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                        <TextView
                            style="@style/TextAppearance.CRM.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_total" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/todaySuccess"
                            style="@style/TextAppearance.CRM.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/accent" />
                        <TextView
                            style="@style/TextAppearance.CRM.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_success" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/todayNoAnswer"
                            style="@style/TextAppearance.CRM.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/warning" />
                        <TextView
                            style="@style/TextAppearance.CRM.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_no_answer" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/todayDropped"
                            style="@style/TextAppearance.CRM.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/error" />
                        <TextView
                            style="@style/TextAppearance.CRM.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stats_dropped" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Lightweight skeleton: один слой, без shimmer, скрывается при первой загрузке -->
                <View
                    android:id="@+id/todayStatsSkeleton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@color/surface_variant"
                    android:contentDescription="@string/stats_today_title" />

                </FrameLayout>

                <TextView
                    android:id="@+id/todayPendingCrm"
                    style="@style/TextAppearance.CRM.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
