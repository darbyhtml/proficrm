<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.CRM.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_sm"
    android:layout_marginVertical="@dimen/spacing_xs"
    android:minHeight="@dimen/touch_target_min"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_base"
        android:gravity="center_vertical">

        <!-- Иконка звонка -->
        <FrameLayout
            android:layout_width="@dimen/history_status_icon_size"
            android:layout_height="@dimen/history_status_icon_size"
            android:layout_marginEnd="@dimen/spacing_md">

            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/badge_background"
                android:padding="@dimen/spacing_xs"
                android:scaleType="centerInside"
                android:src="@drawable/ic_nav_call"
                android:contentDescription="@string/history_status_icon" />
        </FrameLayout>

        <!-- Текстовая часть -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Первая строка: имя или номер (жирный) -->
            <TextView
                android:id="@+id/phoneText"
                style="@style/TextAppearance.CRM.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Вторая строка: всегда номер -->
            <TextView
                android:id="@+id/nameText"
                style="@style/TextAppearance.CRM.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Третья строка: время и длительность -->
            <TextView
                android:id="@+id/statusText"
                style="@style/TextAppearance.CRM.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs" />

            <!-- Заглушки для совместимости с существующим кодом (не отображаются отдельно) -->
            <TextView
                android:id="@+id/durationText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Бейдж статуса (pill) -->
        <TextView
            android:id="@+id/crmBadge"
            style="@style/TextAppearance.CRM.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background"
            android:paddingHorizontal="@dimen/spacing_sm"
            android:paddingVertical="@dimen/spacing_xs"
            android:layout_marginStart="@dimen/spacing_sm" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
