<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/screenPadding"
        android:paddingEnd="@dimen/screenPadding"
        android:paddingTop="@dimen/spacing_sm"
        android:paddingBottom="@dimen/spacing_sm"
        android:gravity="center_vertical">

        <!-- Иконка звонка в круглом фоне -->
        <FrameLayout
            android:layout_width="@dimen/rowIconSize"
            android:layout_height="@dimen/rowIconSize"
            android:layout_marginEnd="@dimen/spacing_md"
            android:background="@drawable/bg_history_icon_circle">

            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_nav_call"
                android:contentDescription="@string/history_status_icon" />
        </FrameLayout>

        <!-- Текстовая часть -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Первая строка: имя или номер (жирный) -->
            <TextView
                android:id="@+id/phoneText"
                style="@style/TextAppearance.CRM.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Вторая строка: всегда номер -->
            <TextView
                android:id="@+id/nameText"
                style="@style/TextAppearance.CRM.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Третья строка: время и длительность -->
            <TextView
                android:id="@+id/statusText"
                style="@style/TextAppearance.CRM.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs" />

            <!-- Заглушки для совместимости с существующим кодом (не отображаются отдельно) -->
            <TextView
                android:id="@+id/durationText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Бейдж статуса (pill) -->
        <TextView
            android:id="@+id/crmBadge"
            style="@style/TextAppearance.CRM.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_history_status_pill"
            android:paddingHorizontal="@dimen/spacing_sm"
            android:paddingVertical="@dimen/spacing_xs"
            android:layout_marginStart="@dimen/spacing_sm" />
    </LinearLayout>

    <!-- Разделитель между строками -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor" />
</LinearLayout>
