<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <!-- Поиск: мягкое поле с иконкой -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        style="@style/Widget.CRM.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/bottom_nav_elevation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/screenPadding"
            android:paddingEnd="@dimen/screenPadding"
            android:paddingTop="@dimen/spacing_sm"
            android:paddingBottom="@dimen/spacing_sm"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_history_search"
                android:paddingStart="@dimen/spacing_base"
                android:paddingEnd="@dimen/spacing_base"
                android:paddingTop="@dimen/spacing_sm"
                android:paddingBottom="@dimen/spacing_sm"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:src="@drawable/ic_search"
                    android:tint="@color/on_surface_variant"
                    android:contentDescription="@string/search_hint" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_hint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:minHeight="@dimen/touch_target_min"
                    android:padding="0dp"
                    android:textColor="@color/on_surface"
                    android:textColorHint="@color/on_surface_variant"
                    android:contentDescription="@string/search_hint" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Фильтры типов звонков (горизонтальные «чипы» как в Figma) -->
    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingStart="@dimen/spacing_sm"
        android:paddingEnd="@dimen/spacing_sm"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/filterGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spacing_sm"
            android:paddingBottom="@dimen/spacing_sm">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterAllButton"
                style="@style/Widget.CRM.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_filter_all"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterOutgoingButton"
                style="@style/Widget.CRM.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="@string/history_filter_outgoing"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterIncomingButton"
                style="@style/Widget.CRM.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="@string/history_filter_incoming"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterMissedButton"
                style="@style/Widget.CRM.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="@string/history_filter_missed"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterFailedButton"
                style="@style/Widget.CRM.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="@string/history_filter_failed"
                android:textAllCaps="false" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Список звонков -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/callsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/spacing_sm"
        app:layout_constraintTop_toBottomOf="@id/filterScroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Пустое состояние -->
    <TextView
        android:id="@+id/emptyState"
        style="@style/TextAppearance.CRM.BodySecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_empty"
        android:textSize="@dimen/text_title_size"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
