<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_base"
        android:paddingBottom="@dimen/spacing_xl">

        <!-- УЧЁТНАЯ ЗАПИСЬ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_base"
            android:paddingEnd="@dimen/spacing_base"
            android:paddingTop="@dimen/spacing_sm"
            android:paddingBottom="@dimen/spacing_xs"
            android:text="@string/settings_section_account"
            android:textAllCaps="true"
            android:textColor="@color/on_surface_variant"
            android:textSize="12sp" />

        <include
            android:id="@+id/rowUser"
            layout="@layout/item_settings_row" />

        <include
            android:id="@+id/rowLogout"
            layout="@layout/item_settings_row" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- РАЗРЕШЕНИЯ СИСТЕМЫ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_base"
            android:paddingEnd="@dimen/spacing_base">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_section_permissions"
                android:textAllCaps="true"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/settings_section_permissions_hint"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp" />
        </LinearLayout>

        <include
            android:id="@+id/rowNotifications"
            layout="@layout/item_settings_row" />

        <include
            android:id="@+id/rowBattery"
            layout="@layout/item_settings_row" />

        <include
            android:id="@+id/rowAutostart"
            layout="@layout/item_settings_row" />

        <include
            android:id="@+id/rowManufacturer"
            layout="@layout/item_settings_row" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- ИНФОРМАЦИЯ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_base"
            android:paddingEnd="@dimen/spacing_base"
            android:paddingTop="@dimen/spacing_sm"
            android:paddingBottom="@dimen/spacing_xs"
            android:text="@string/settings_section_info"
            android:textAllCaps="true"
            android:textColor="@color/on_surface_variant"
            android:textSize="12sp" />

        <include
            android:id="@+id/rowAbout"
            layout="@layout/item_settings_row" />

        <include
            android:id="@+id/rowDiagnostics"
            layout="@layout/item_settings_row" />

        <!-- Нижний блок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/spacing_xl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_footer_app_name"
                android:textStyle="bold"
                android:textColor="@color/on_surface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/settings_footer_copyright"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:paddingStart="@dimen/spacing_base"
                android:paddingEnd="@dimen/spacing_base"
                android:text="@string/settings_footer_note"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
