<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_base">

        <!-- Статус авторизации -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.CRM.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_base">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_base">

                <TextView
                    style="@style/TextAppearance.CRM.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_auth_title"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <TextView
                    android:id="@+id/authStatus"
                    style="@style/TextAppearance.CRM.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_auth_authorized"
                    android:textColor="@color/accent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Работа в фоне -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.CRM.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_base">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_base">

                <TextView
                    style="@style/TextAppearance.CRM.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_background_title"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/batteryButton"
                    style="@style/Widget.CRM.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_allow_background"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/oemHelpButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_oem_help"
                    android:minHeight="@dimen/touch_target_min"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Поддержка и диагностика -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.CRM.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_base">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_base">

                <TextView
                    style="@style/TextAppearance.CRM.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_diagnostics_title"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <TextView
                    style="@style/TextAppearance.CRM.BodySecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_diagnostics_hint"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/diagnosticsCopyButton"
                    style="@style/Widget.CRM.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_diagnostics_copy"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/diagnosticsShareButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_diagnostics_share"
                    android:minHeight="@dimen/touch_target_min"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/connectionCheckButton"
                    style="@style/Widget.CRM.Button.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_connection_check" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- О приложении -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.CRM.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_base">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_base">

                <TextView
                    style="@style/TextAppearance.CRM.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about_title"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <TextView
                    android:id="@+id/versionText"
                    style="@style/TextAppearance.CRM.BodySecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about_version_placeholder"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <TextView
                    android:id="@+id/telemetryModeText"
                    style="@style/TextAppearance.CRM.BodySecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <TextView
                    android:id="@+id/pullCallModeText"
                    style="@style/TextAppearance.CRM.BodySecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
